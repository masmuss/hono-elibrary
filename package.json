{
  "name": "e-library",
  "version": "1.0.0",
  "description": "A simple e-library API using Hono and Drizzle ORM",
  "engines": {
    "bun": ">=1.2.0"
  },
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "test": "bun test --env-file=.env.test --preload ./test/setup.ts",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "lint": "bunx biome lint",
    "lint:check": "bunx biome check --staged",
    "lint:fix": "bunx biome lint --write",
    "format": "bunx biome format --write ."
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.19.6",
    "@scalar/hono-api-reference": "^0.8.8",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.7.1",
    "hono": "^4.7.8",
    "pg": "^8.15.6",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@faker-js/faker": "^9.8.0",
    "@types/bun": "latest",
    "@types/pg": "^8.12.0",
    "drizzle-kit": "^0.31.1",
    "tsx": "^4.19.4"
  }
}
